<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">
        <title>Assets</title>
        <% include!("./nav_style.stpl"); %>
        <% include!("./search_style.stpl"); %>
        <style>
            .InfoWrap {
                min-height: 1rem;
                display: flex;
                flex: 1;
            }

            .InfoItem {
                font-size: 1rem;
                padding: 3rem 3rem 0.5rem 0.5rem;
                flex: 1;
            }

            .InfoPad {
                flex: 0 0 20vw;
            }

            .AssetsWrap {
                display: flex;
                min-height: 100vh;
                flex-direction: column;
                margin: 0;
            }

            .AssetRow {
                display: flex;
                flex: 1;
                max-height: 10vh;
            }

            .AssetItem {
                font-size: 1rem;
                padding: 3rem 3rem 0.5rem 0.5rem;
                flex: 1;
            }

            .AssetPad {
                flex: 0 0 20vw;
            }

            .PagWrap {
                background-color: rgb(100, 100, 100);
                display: flex;
                flex: 1;
                font-family: 'Oswald', sans-serif;
                font-size: 1.25rem;
                min-height: 1.50rem;
                max-height: 10vh;
            }

            .PagPrev,
            .PagNext {
                padding: 1rem 1rem 1rem 1rem;
                border-radius: 5px;
            }

            .PagPrev > a:hover,
            .PagNext > a:hover {
                background-color: rgb(75, 75, 75);
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

            .PagPrev > a,
            .PagNext > a {
                color: #ebebeb;
                text-decoration: none;
                padding: 0.5rem 0.5rem;
            }

            .PagPrev {
                margin-right: 1rem;
            }

            .PagNext {
                margin-left: auto;
            }
        </style>
    </head>
    <body>
        <div class="NavWrap">
            <img src="/r-logo.png" alt="logo" class="LogoItem">
            <a href="/" class="ListItem">Home</a>
            <a href="/asset_items" class="ListItem Active">Asset Items</a>
            <a href="/" class="ListItem">User Items</a>
            <a href="/" class="ListItem">Associations</a>
            <a href="/" class="LastItem">Logout</a>
        </div>
        <div class ="SearchWrap">
            <div class="SearchItem">
                <form action="/asset_items" method="get">
                    <input id="search" name="name" type="search" placeholder="asset name">
                    <button type="submit">Search</button>
                </form>
            </div>
            <div class="SearchLast">
                <a href="/asset_items/new">Add Asset</a>
                <a href="/asset_items/new">Upload Assets</a>
            </div>
        </div>
        <div class="InfoWrap">
            <div class="InfoPad"></div>
            <div class="InfoItem"><strong>Asset ID</strong></div>
            <div class="InfoItem"><strong>Name</strong></div>
            <div class="InfoItem"><strong>Serial Number</strong></div>      
            <div class="InfoPad"></div>     
        </div>
        <div class="AssetsWrap">
            <% for asset in assets.iter() { %>
                <div class="AssetRow">
                    <div class="AssetPad"></div>
                    <div class="AssetItem"><a href="/asset_items/<%= asset.sid.to_string() %>"></a><%= asset.asset_id %></div>
                    <div class="AssetItem"><%= asset.name %></div>
                    <div class="AssetItem"><%= asset.serial_num %></div>
                    <div class="AssetPad"></div>
                </div>
            <% } %>
            <div class="PagWrap">
                <div class="PagPrev"><a href="<%= prev_uri %>">Prev</a></div>
                <div class="PagNext"><a href="<%= next_uri %>">Next</a></div>
            </div>
        </div>
    </body>
</html>